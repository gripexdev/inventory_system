<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F3F4F6;" stylesheets="styles/dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.DashboardController">
   <AnchorPane prefHeight="60.0" prefWidth="820.0" style="-fx-background-color: linear-gradient(to right, #263F77, #4A68B1);">
      <Label layoutX="20.0" layoutY="15.0" text="Dashboard" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="20.0" />
         </font>
      </Label>
      <Button fx:id="logoutButton" layoutX="700.0" layoutY="15.0" mnemonicParsing="false" style="-fx-background-color: #FF6B6B; -fx-background-radius: 15;" text="Logout" textFill="WHITE" onAction="#logout">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </AnchorPane>

   <AnchorPane layoutX="0.0" layoutY="60.0" prefHeight="540.0" prefWidth="200.0" style="-fx-background-color: #263F77;">
      <Label layoutX="20.0" layoutY="30.0" text="Menu" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="16.0" />
         </font>
      </Label>
      <Button fx:id="manageProductsButton" layoutX="20.0" layoutY="80.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Manage Products">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="reportsButton" layoutX="20.0" layoutY="130.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Reports">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="settingsButton" layoutX="20.0" layoutY="180.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Settings">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </AnchorPane>

   <AnchorPane layoutX="200.0" layoutY="60.0" prefHeight="540.0" prefWidth="600.0">
      <TextField fx:id="searchField" layoutX="20.0" layoutY="20.0" prefHeight="30.0" prefWidth="400.0" promptText="Search products..." style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #263F77;">
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <Button fx:id="addProductButton" layoutX="450.0" layoutY="20.0" mnemonicParsing="false" style="-fx-background-color: #4A68B1; -fx-background-radius: 15;" text="Add Product" textFill="WHITE">
         <font>
            <Font size="13.0" />
         </font>
      </Button>

      <TableView fx:id="productsTable" layoutX="10.0" layoutY="82.0" prefHeight="420.0" prefWidth="600.0" style="-fx-background-radius: 10; -fx-border-radius: 10;">
         <columns>
            <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID" />
            <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Nom Produit" />
            <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Prix" />
            <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="QuantitÃ©" />
            <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Categorie" />
            <TableColumn fx:id="actionColumn" prefWidth="100.0" text="Actions" />
         </columns>
      </TableView>
   </AnchorPane>
</AnchorPane>
