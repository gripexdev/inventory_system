<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F3F4F6;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.UpdateProductController">
    <AnchorPane prefHeight="60.0" prefWidth="820.0" style="-fx-background-color: linear-gradient(to right, #263F77, #4A68B1);">
        <Label layoutX="20.0" layoutY="15.0" text="Update Product" textFill="WHITE">
            <font>
                <Font name="Arial Black" size="20.0" />
            </font>
        </Label>
        <Button fx:id="logoutButton" layoutX="700.0" layoutY="15.0" mnemonicParsing="false" style="-fx-background-color: #FF6B6B; -fx-background-radius: 15;" text="Logout" textFill="WHITE" onAction="#logout">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
    </AnchorPane>

    <AnchorPane layoutX="0.0" layoutY="60.0" prefHeight="540.0" prefWidth="200.0" style="-fx-background-color: #263F77;">
        <Label layoutX="20.0" layoutY="30.0" text="Menu" textFill="WHITE">
            <font>
                <Font name="Arial Black" size="16.0" />
            </font>
        </Label>
        <Button layoutX="20.0" layoutY="80.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Manage Products" />
        <Button layoutX="20.0" layoutY="130.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Reports" />
        <Button layoutX="20.0" layoutY="180.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Settings" />
    </AnchorPane>

    <AnchorPane layoutX="200.0" layoutY="60.0" prefHeight="540.0" prefWidth="600.0">
        <Label layoutX="20.0" layoutY="20.0" text="Product Name" />
        <TextField fx:id="nameField" layoutX="150.0" layoutY="20.0" prefHeight="30.0" prefWidth="300.0" />
        <Label fx:id="nameErrorLabel" layoutX="150.0" layoutY="50.0" textFill="RED" />

        <Label layoutX="20.0" layoutY="70.0" text="Category" />
        <TextField fx:id="categoryField" layoutX="150.0" layoutY="70.0" prefHeight="30.0" prefWidth="300.0" />
        <Label fx:id="categoryErrorLabel" layoutX="150.0" layoutY="100.0" textFill="RED" />

        <Label layoutX="20.0" layoutY="120.0" text="Price" />
        <TextField fx:id="priceField" layoutX="150.0" layoutY="120.0" prefHeight="30.0" prefWidth="300.0" />
        <Label fx:id="priceErrorLabel" layoutX="150.0" layoutY="150.0" textFill="RED" />

        <Label layoutX="20.0" layoutY="170.0" text="Quantity" />
        <TextField fx:id="quantityField" layoutX="150.0" layoutY="170.0" prefHeight="30.0" prefWidth="300.0" />
        <Label fx:id="quantityErrorLabel" layoutX="150.0" layoutY="200.0" textFill="RED" />

        <Button fx:id="saveButton" layoutX="150.0" layoutY="250.0" mnemonicParsing="false" style="-fx-background-color: #4A68B1; -fx-background-radius: 15;" text="Save" textFill="WHITE" onAction="#onUpdateProduct"/>
        <Button fx:id="cancelButton" layoutX="300.0" layoutY="250.0" mnemonicParsing="false" style="-fx-background-color: #FF6B6B; -fx-background-radius: 15;" text="Cancel" textFill="WHITE" onAction="#returnToDashboard"/>
    </AnchorPane>
</AnchorPane>
